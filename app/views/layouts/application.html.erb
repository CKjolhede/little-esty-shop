<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p>Repo Name: <%= @data[:name] %> </p>
      <br>
      Collaborators: <br> <%@data2.each do |contributor| %>
      <p> <%= contributor[:login] %>, Commits: <%= contributor[:contributions] %> </p>
      <% end %>
      <br>
      Merged Pull Requests: <%= @data3.count %>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
